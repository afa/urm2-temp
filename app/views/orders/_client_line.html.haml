- iid = client_line.line_id
%tr
 %td.select_data{:style => "display: none;"}
  = check_box_tag "order[#{client_line.sales_id}][line][#{iid}][selected]", "1", false
 %td
  = client_line.rohs
  = hidden_field_tag "order[#{client_line.sales_id}][line][#{iid}][line_id]", client_line.line_id # сртпв item_id to line_id ??
  = hidden_field_tag "order[#{client_line.sales_id}][line][#{iid}][note]", client_line.note
  = hidden_field_tag "order[#{client_line.sales_id}][line][#{iid}][requirement]", client_line.requirements
  = hidden_field_tag "order[#{client_line.sales_id}][line][#{iid}][process_qty]", client_line.process_qty
  = hidden_field_tag "order[#{client_line.sales_id}][line][#{iid}][selected]", ""
 %td.text-left= client_line.item_name
 %td.text-left= client_line.brend
 %td.text-right.tiny
  .readable-amount{:style => "display: none;"}= client_line.sales_qty
  .editable-amount= text_field_tag "order[#{client_line.sales_id}][line][#{iid}][qty]", client_line.sales_qty
 %td.text-right= client_line.price
 -# TODO %td.text-right= text_field_tag "order[#{showed_line.sales_id}][user_price]", showed_line.user_price
 %td.text-right= client_line.amount
 %td= client_line.qty_in_debt
 %td.reserve_data.tiny{:style => "display: none;"}= text_field_tag "order[#{client_line.sales_id}][line][#{iid}][process_qty]", client_line.process_qty
 %td= client_line.reserve_qty
 %td= client_line.qty_in_processing
 %td= client_line.qty_receive
 %td= client_line.invoiced_in_total
 %td= client_line.date_dead_line
 %td= client_line.confirmed_dlv_date
 %td.note-option.main_options_data.medium= text_field_tag "order[#{client_line.sales_id}][line][#{iid}][note]", client_line.note
 %td.requirement-option.main_options_data.medium= text_field_tag "order[#{client_line.sales_id}][line][#{iid}][requirement]", client_line.requirements
 %td
 %td


