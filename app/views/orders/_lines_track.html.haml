%tr{:class => ["track_item_#{row_id}"]}
 -# %td.icons
  .icon
   %input.after{:type=>"hidden", :value => row_id}
   %a.plus{:href=>"#", :class=>"hide"}
 %td{:colspan => 20, :style => "padding-top:20px;padding-bottom:20px;text-alignment:center;"}
  %table
   -# {:width => "100%"}
   %tr.heading
    %th.text-left Наименование
    %th.text-left Производитель
    %th ROHS
    %th.text-right Количество
    %th.text-left Статус
    %th Ожидаемая дата поставки
    %th Внештатная ситуация
    %th Дата прояснения ситуации
   - lines_tracks.each do |track|
    %tr.data
     %td.text-left= track.item_name
     %td.text-left= track.item_brend
     %td= track.rohs
     %td.text-right= track.qty
     %td.text-left= track.status_rus
     %td= track.expected_date
     %td= track.issue
     %td= track.resolution_date

