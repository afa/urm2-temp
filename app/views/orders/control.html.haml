.nav-title
 %span= link_to "Заказы", orders_path
 %span >
 %span.current Контроль продолжительности резервирования

.content-wrap
 .info-line
  %table
   %tr
    %th.text-left.pad-right
     Текущая сумма резерва
    %td.text-right= @usd_decor.decore @info.reserve_used
   %tr
    %th.text-left.pad-right
     Доступная сумма резерва
    %td.text-right= @usd_decor.decore @info.reserve_available
   %tr
    %th.text-left.pad-right
     Коэффициент эффективности
    %td.text-right= @rub_decor.decore @info.reserve_coefficient
   -# %tr
    %th
     Количество дней резервирования: 5
 .filter-block
  = form_for :filter, :url => control_orders_path, :html => {:method => :get} do |f|
   .filter
    %table

     %tr
      %th= f.label :item_name, t(:item_name)
      %td.long= f.text_field :item_name
     %tr
      %th= f.label :reservation_end, t(:reservation_end) # !!! todo fix field name
      %td.tiny= f.text_field :reservation_end
     %tr
      %th
      %td= render :partial => "shared/check_button", :locals => {:name => "filter[only_my]", :title => t(:only_my_orders), :opts => {:use_system => true, :value => params[:filter].try(:[], :only_my).try(:==, '1')}}
     -#
      %th= f.label :only_my, t(:only_my_orders)
      %td.tiny= f.text_field :only_my
      -# #ui-datepicker-div-container{:style=>"position: relative;"}
     %tr
      %th
      %td= render :partial => "shared/submit_button", :locals => {:title => t(:find)}
      
   .clear.block-padded


 .table-navigation-block{:class => "scroll"}
  .table-block
   .table-scrolling
    %table.table-style{:class => "order-list"}
     %tr
      %th Код номенклатуры
      %th= t(:item_name)
      %th Производитель
      %th Количество
      %th Сумма
      %th Зарезервировано
      %th Разрезервировать
      %th Заказ
      %th Web
      %th Контактное лицо
      %th Менеджер

     = render :partial => "orders/control_line", :collection => @lines
    .padded
    %div{:style => "display:inline-block; float:right;"}
     - unless @lines.empty?
      = form_for :export_fields, :url => export_control_orders_path(:format => :xls), :method => :post, :html=>{:class => "js", :style => "display: inline-block;"} do |f|
       %input.copiable{:type => :hidden, :value => 'input#filter_item_name'}
       %input.copiable{:type => :hidden, :value => 'input#filter_reservation_end'}
       %input.copiable{:type => :hidden, :value => 'input#filter_only_my'}
       = render :partial => "shared/submit_button", :locals => {:title => t(:export_xls), :name => "items[export]", :opts => {:class => "preload", :style => "float: right;"}}
      = form_for :export_fields, :url => export_control_orders_path(:format => :csv), :method => :post, :html=>{:class => "js", :style => "display: inline-block;"} do |f|
       %input.copiable{:type => :hidden, :value => 'input#filter_item_name'}
       %input.copiable{:type => :hidden, :value => 'input#filter_reservation_end'}
       %input.copiable{:type => :hidden, :value => 'input#filter_only_my'}
       = render :partial => "shared/submit_button", :locals => {:title => t(:export_csv), :name => "items[export]", :opts => {:class => "preload", :style => "float: right;"}}
    %div{:style => "display:inline-block; float:left;"}
     = paginate(:page => @lines.page.to_i, :pages => @lines.pages.to_i, :derid => {:align => "left", :hide_empty => true})
    %div{:style => "display:inline-block; float:left;"}
     = render :partial => "shared/stat.html.haml", :locals => {:mode => :strings, :value => @lines.records.to_i}
