.nav-title
 %span= link_to "Запросы", quotations_path
-# %span >
 %span.current Список запросов
.content-wrap
 .table-navigation-block{:class => "scroll"}
  .table-block
   .table-scrolling
    .filter-block
     %table
      %tr
       %td{:style => "white-space: nowrap;"}
        = form_for :filter, :url => quotations_path, :html => {:method => :get} do |f|
         .filter
          = render :partial => "shared/submit_button", :locals => {:title => "Найти"}
          = f.label :quotation_id, t(:quotation_id_filter) + ':'
          = f.text_field :quotation_id, :style => "width: 80px;"
       %td{:style => "white-space: nowrap;"}
        = form_for :filter, :url => quotations_path, :html => {:method => :get} do |f|
         .filter
          = render :partial => "shared/submit_button", :locals => {:title => "Показать"}
          = t(:quotation_status_filter) + ':'
          = render :partial => "shared/select_list", :locals => {:list_items => (@filter.quotation_statuses || []), :name => "filter[quotation_status]", :title => '', :opts => {:use_system => true, :selected => @filter.quotation_status, :with_blank => true}}
          = render :partial => "shared/check_button", :locals => {:name => "filter[this_sales_origin]", :title => t(:this_sales_origin_quotations), :opts => {:use_system => true, :need_field => false, :value => @filter.try(:this_sales_origin).try(:==, '1')}}
          = render :partial => "shared/check_button", :locals => {:name => "filter[only_my]", :title => t(:only_my_quotations), :opts => {:use_system => true, :need_field => false, :value => @filter.try(:only_my).try(:==, '1')}}

    -# = render :partial => "shared/pagination", :locals => {:page => @quotations.page.to_i, :pages => @quotations.total.to_i, :opts => {:show_numbers => false, :show_prevnext => true, :show_firstlast => true, :show_current => true, :text_before => "Записей: #{@quotations.records}&nbsp;&nbsp;Страниц: #{@quotations.total}&nbsp;&nbsp;".html_safe, :text_before_current => "Страница: "}}
    -# = render :partial => "shared/pagination", :locals => {:page => @quotations.page.to_i, :pages => @quotations.total.to_i, :opts => {:show_numbers => false, :show_prevnext => true, :show_firstlast => true, :show_current => true, :text_before => "Записей: #{@quotations.records}&nbsp;&nbsp;Страниц: #{@quotations.total} Страница "}}
    %table.table-style.quotation-list
     %tr
      %th.text-left УРМ
      %th.text-center Номер запроса
      %th.text-center Дата создания
      %th.text-left Статус
      %th.text-left{:style => "min-width:180px;"} Контактное лицо
      %th.text-left{:style => "min-width:250px;"} Менеджер
      %th.text-left{:style => "min-width:400px;"} Примечание
     = render :partial => "quotations/list_line", :collection => @quotations.items
    = paginate(:derid => {:page => @quotations.page.to_i, :pages => @quotations.total.to_i, :align => "left"})
    .padded
     = form_for :export_fields, :url => export_list_quotations_path(:format => :csv), :method => :post, :html=>{:class => "js"} do |f|
      = render :partial => "shared/submit_button", :locals => {:title => "Export", :name => "items[export]", :opts => {:style => "float: right;"}}
