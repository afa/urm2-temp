%h2 Sign in

- form_for :session, :url => sessions_path do |form|
 .text_field
  - #= form.label :email %>
  - #= form.text_field :email, :type => "email" %>
  = form.label t("activerecord.attributes.user.username"), :username
  = form.text_field :username
 .text_field
  = form.label :password
  = form.password_field :password

 .submit_field
  = form.submit "Sign in"
%ul
 %li= link_to "Register", new_user_path
