           .select
            .sub
             opt = !(current_user.try(:current_account)) ? ({:class => "active"}) : ({})
             = link_to "-----", "#", :name => "0", *opt
             - @accounts.each do |a|
              - opt = (current_user.try(:current_account) && current_user.current_account.id == a.id) ? ({:class => "active"}) : ({})
              = link_to a.contact_first_name, "#", :name => a.id, *opt
            = form.hidden_field :account
          .account_selector
           -# form_for :current_account, :url => current_account_users_path, :html => {:method => :get} do |form|
            = form.label :account
            = form.select :account, options_from_collection_for_select(current_user.accounts.where(:blocked => false), :id, :contact_first_name, current_user.current_account.try(:id)), :include_blank => t(:select_account)
            = form.submit :select
          -#%a{:href=>user_path(current_user)} Настройки
