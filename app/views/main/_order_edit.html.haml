- form_for :order, :url => orders_path, :remote => true, :html => {:class => "js"} do |f|
 - unless @deliveries.empty?
  -# form_for :current_account, :url => current_account_users_path, :html => {:method => :get} do |form|
  .select
   .sub
    -# = link_to "-----", "#", :name => "0" unless current_user.current_account
    - @deliveries.each do |a|
     = link_to a[1], "#", :name => a[0], :class => "showed", :style => "white-space:nowrap;"
   = hidden_field_tag :delivery_type, @deliveries.first.try(:first) || 0
  -# %select{:name => "delivery_type"}
   - @deliveries.each do |del|
    %option{:value=>del[0]}= del[1]
 %input.date-picker.calendar-input{:type => "text", :name => 'date_picker'}
 -# - unless @nreqs.empty?
  %h3 заказы
  %table.table-style
   %tr
    %th.text-left= t :type
    %th.text-left= t :name
    %th.text-left= t :brend
    %th.text-left= t :rohs
    %th= t :price
    %th= t :amount
    %th.text-left= t :location
    %th.text-left= t :prognosis
    %th= t :comment
    %th= t :user_price
    %th= t :actions
   - @nreqs.each do |item|
    %tr
     = f.fields_for :item, item do |ff|
      %td.text-left= item.type_name
      %td.text-left= item.product_name
      %td.text-left= item.product_brend
      %td.text-left= item.product_rohs
      %td= item.current_price
      %td= item.amount
      %td.text-left= item.location_link
      %td.text-left= item.prognosis
      %td= text_area_tag "ord[#{item.id}][comment]", item.comment, :rows => 1
      %td= item.user_price
      %td= item.is_a?(CartRequest) ? t(:request) : (item.is_a?(CartWorld) ? t(:pick) : (item.pick? ? t(:pick) : (item.reserve? ? t(:reserve) : 'заказ')))
 -# - unless @reqs.empty?
  %h3 запросы
  %table
   %tr
    %th.text-left= t :type
    %th.text-left= t :name
    %th.text-left= t :brend
    %th.text-left= t :rohs
    %th= t :price
    %th= t :amount
    %th.text-left= t :location
    %th.text-left= t :prognosis
    %th= t :comment
    %th= t :user_price
    %th= t :actions

    %th запрос
    %th= t :comment
   - @reqs.each do |item|
    = f.fields_for :item do |ff|
     %tr
      %td.text-left= item.type_name
      %td.text-left= item.product_name
      %td.text-left= item.product_brend
      %td.text-left= item.product_rohs
      %td= item.current_price
      %td= item.amount
      %td.text-left= item.location_link
      %td.text-left= item.prognosis
      %td= text_area_tag "ord[#{item.id}][comment]", item.comment, :rows => 1
      %td= item.user_price
      %td= item.is_a?(CartRequest) ? t(:request) : (item.is_a?(CartWorld) ? t(:pick) : (item.pick? ? t(:pick) : (item.reserve? ? t(:reserve) : 'заказ')))

 = f.submit t(:make)
