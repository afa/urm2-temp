- prices = info_block.delete_field(:prices)
- dates = info_block.delete_field(:dates)
 -# - keys = info_block.marshal_dump.inject({}){|r, (k, v)| (not (v.blank? || v.to_s == '0')) ? r.merge(k => v) : r }.keys
