%tr.info-data.sub-row-block{:class => "info_item_#{after}"}
 %td.border-l &nbsp;
 %td.border-r{:colspan=>"17", :valign => "top"}
  %table
   %tr
    %td{:style => "border-bottom: 0;"}
     %dl
      %dt Товарный класс:
      %dd= info_block.class_name
     %dl
      %dt Количество в упаковке:
      %dd= info_block.qty_in_pack
     %dl
      %dt Описание:
      %dd.italic= info_block.description
     %dl
      %dt Сегмент продукции:
      %dd= info_block.segment_rus
     %dl
      %dt Вид упаковки:
      %dd= info_block.packing_type
     %dl
      %dt Вес брутто, г:
      %dd= info_block.weight
     %dl
      %dt Объём, мм3:
      %dd= info_block.volume
    %td{:style => "border-bottom: 0;"}
     - unless dates.blank?
      %table
       %tr
        %th{:colspan => 3}= t(:del_prognoz)
       - dates.each do |k, r|
        - unless r.empty?
         - r.each do |s|
          %tr
           %td{:style => "border-bottom: 0;"}= s.qty
           %td{:style => "border-bottom: 0;"}= s.date
           %td{:style => "border-bottom: 0;"}= k
    %td{:style => "border-bottom: 0;"}
     - unless prices.blank?
      %table
       %tr
        %th{:colspan => 7}= t(:end_user_price)
       %tr
        %td{:style => "border-bottom: 0;"}= @usd_decor.decore(prices.price1)
        %td{:style => "border-bottom: 0;"}= prices.count2
        %td{:style => "border-bottom: 0;"}= @usd_decor.decore(prices.price2)
        %td{:style => "border-bottom: 0;"}= prices.count3
        %td{:style => "border-bottom: 0;"}= @usd_decor.decore(prices.price3)
        %td{:style => "border-bottom: 0;"}= prices.count4
        %td{:style => "border-bottom: 0;"}= @usd_decor.decore(prices.price4)
