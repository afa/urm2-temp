- require "web_utils"
- line_code = WebUtils.escape_name("#{items_line["item_name"]}_#{items_line["item_brend"]}_#{items_line["rohs"]}")
%tr{:class => "item_#{line_code}"}
 %td.icons
  %input.item-code{:id => "code_#{line_code}", :type => "hidden", :value => items_line["item_id"]}
  .icon
   -# = link_to "", main_dms_path(:code => items_line["item_id"], :after => line_code), :class => "dms js", :remote => true
   .dms{:class => "js"}
   = link_to "", main_dms_path(:code => items_line["item_id"], :after => line_code), :class => "dms js", :remote => true
   .slider &nbsp;
  .icon
   - if items_line["analog_exists"]
    = link_to "", main_analog_path(:code => items_line["item_id"], :after => line_code), :class => "replacement js active", :remote => true
   - else
    .replacement &nbsp;
   .slider &nbsp;

 %td.text-left= link_to items_line["item_name"], main_info_path(:code => items_line["item_id"], :after => line_code), :class => "dms js", :remote => true

 %td.text-left
  - if items_line["item_brend_url"].blank?
   - if items_line["item_brend_name"].blank?
    #{items_line["item_brend"]}
   - else
    %abbr{:title => items_line["item_brend_name"]}= items_line["item_brend"]
  - else
   %a{:href => items_line["item_brend_url"], :title => items_line["item_brend_name"]}= items_line["item_brend"]
 %td= items_line["body_name"]
 %td= items_line["rohs"]
