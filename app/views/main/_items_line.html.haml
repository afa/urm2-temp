%tr
 %td= items_line["item_brend"]
 %td= items_line["item_id"]
 %td= items_line["item_name"]
 - if items_line["locations"].blank?
  %td{:colspan=>8} &nbsp;
 - else
  -# items_line["locations"].each do |location|
  - location = items_line["locations"].first
  - if location["delivery_prognosis"].blank?
   %td{:colspan=>2} &nbsp;
  - else
   -# location["delivery_prognosis"].each do |prognos|
   - prognos = location["delivery_prognosis"].first
   %td= prognos["delivery_date"]
   %td= prognos["delivery_qty"]
  %td= location["location_id"]
  - if location["price_qty"].blank?
   %td{:colspan=>4} &nbsp;
  - else
   -# location["price_qty"].each do |price|
   - price = location["price_qty"].first
   %td= price["max_qty"]
   %td= price["min_qty"]
   %td= price["price"]
   %td= price["price_ref"]
  %td= location["vend_qty"]
 %td= items_line["min_qty"]
 %td= items_line["package_name"]
 %td= items_line["qty_in_pack"]
 %td= items_line["rohs"]
 %td= items_line["segment_rus"]
 %td
  - if need_links
   = link_to t(:expand), extended_path, :remote => true
   = link_to t(:dms), main_dms_path(:name => items_line["item_name"], :brend => items_line["item_brend"]), :class=>"js", :remote => true
