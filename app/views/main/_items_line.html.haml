- require "web_utils"
- line_code = items_line.base_signature
- offer_code = items_line.signature
- offer_amount = items_line.amount.to_i > 0 ? items_line.amount : ''
%tr{:class => "item_#{line_code}"}
 %td.icons
  %input.item-code{:type => "hidden", :value => items_line.code, :name => "items[#{offer_code}][code]", :id => "code_#{line_code}"}
  %input.item-cart{:type => "hidden", :value => items_line.cart_id, :name => "items[#{offer_code}][cart]"}
  .icon
   -# = link_to "", dms_main_index_path(:code => items_line["item_id"], :after => line_code), :class => "dms js", :remote => true
   .dms-req &nbsp;
   .slider &nbsp;
  .icon
   - if items_line.analog_exists
    = link_to "", analog_main_index_path(:code => items_line.code, :after => line_code, :format => :json), :class => "replacement js active"
   - else
    .replacement &nbsp;
   .slider &nbsp;

 -# %td.text-left= link_to items_line.name, info_main_index_path(:code => items_line.code, :after => line_code, :loc => items_line.location_id), :class => "js", :title => "Описание позиции", :remote => true
 %td.text-left= link_to items_line.name, info_main_index_path(:code => items_line.code, :after => line_code, :loc => items_line.location_id, :format => :json), :class => "js info", :title => "Описание позиции"

 %td.text-left
  - if items_line.brend_url.blank?
   - if items_line.brend_name.blank?
    #{items_line.brend}
   - else
    %abbr{:title => items_line.brend_name}= items_line.brend
  - else
   %a{:href => [items_line.brend_url.strip].map{|s| s[0, 7].downcase == "http://" ? s : "http://#{s}" }.first, :title => items_line.brend_name, :target => "_blank"}= items_line.brend
 %td.text-left= items_line.body_name
 %td= items_line.rohs
 %td.input-in-cart
  %div
   %a.speed-cart-button{:href=>"#"}
    %span
     %span &nbsp;
   %input{:type=>"text", :class=>["validate[custom[onlyNumber],max[10000]]", items_line.min_qty > 1 ? "with-critical" : nil], :name => "items[#{offer_code}][amount]", :value => offer_amount}
   - if items_line.reserve_control
    = image_tag asset_path('warning.png')
   -# %input{:type=>"text", :class=>"validate[custom[onlyNumber],max[#{items_line["max_qty"] || 0}]]"}
   %a.count{:href=>"#"}
 
 %td.double-first-cell.text-right= items_line.min_qty > 1 ? items_line.min_qty : ''
 %td.text-right= items_line.max_qty
 %td.text-right.double-last-cell= items_line.mpq.to_i > 1 ? items_line.mpq : ''
 %td.with-icons
  = items_line.location_id
  - if items_line.forecast_available
   .icons 
    .icon
     = link_to "", info_main_index_path(:code => items_line.code, :after => line_code, :loc => items_line.location_id, :format => :json), :class => "info js delivery active"
    -# - else
     .delivery &nbsp;
