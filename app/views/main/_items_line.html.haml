     %span &nbsp;
   %input{:type=>"text", :class=>"validate[custom[onlyNumber],max[10000]]"}
   -# %input{:type=>"text", :class=>"validate[custom[onlyNumber],max[#{items_line["max_qty"] || 0}]]"}
   %a.count{:href=>"#"}
 
 %td= items_line["min_qty"]
 %td= items_line["max_qty"]
 %td
  .icons 
   .icon
    - if items_line["forecast_available"]
     = link_to "", main_info_path(:code => items_line["item_id"], :after => line_code), :class => "info js delivery active", :remote => true
    - else
     .delivery &nbsp;
