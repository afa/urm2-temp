 - form_for :cart_item, :html => {:method => :put}, :url => save_carts_path, :remote => true, :class => 'js' do |ff|

  %table
   %tr
    %th.text-left= t :type
    %th.text-left= t :name
    %th.text-left= t :brend
    %th.text-left= t :rohs
    %th= t :price
    %th= t :amount
    %th.text-left= t :location
    %th.text-left= t :prognosis
    %th= t :comment
    %th= t :user_price
    %th= t :action
   = render :partial => "carts/cart_line", :collection => cart
  = ff.submit t(:save)
 
